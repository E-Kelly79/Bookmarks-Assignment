<div class="ui grid">
  <div class="row">  
    {{#each bookmark.bookmarks}}
      <div class="four wide column">
        <div class="ui card">
          <div class="image fixed">
            <img src="{{image}}">
          </div>
          <div class="content">
            <a class="header">{{title}}</a>
            <div class="description">
              {{artist}}
            </div>
          </div>
          <div class="extra content">
            <a href="/playlist/{{../playlist.id}}/deletesong/{{id}}"> <i class="trash icon"></i></a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>