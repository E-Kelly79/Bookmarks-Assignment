<div class="ui stacked segment comments" style="margin: 0 auto;">
  <h1 class="ui dividing header">Comments</h1>
   {{#each comments}}
  <div class="comment">
    <a class="avatar">
     <img src="https://cdn.glitch.com/b9f61533-bbf7-4af3-b130-9535757d10d0%2Felliot.jpg?1523480872853" alt="Avatar">
    </a>
    <div class="content">
      <a class="author" id="name">Name: {{name}}</a>
      <div class="metadata">
        <span class="date">Today at 5:42PM</span>
      </div>
      <div class="text" id="comment">
        Message: {{comment}}
      </div>
      <div class="actions">
        <a class="reply" style="color:white;">Reply</a>
      </div>
    </div>
  </div>
    {{/each}}
   

</div>
