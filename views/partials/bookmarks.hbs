<div class="ui grid">
  <p>
    hello
  </p>
  <div class="row">
{{#each bookmark}}
    <div class="four wide column">
      <div class="ui cards">
        <div class="card">
          <div class="content">
            <img class="right floated tiny ui image" src="{{theImage}}">
            <div class="header">
              {{title}}
            </div>
            <div class="description">
              <!--<p>Total Duration: {{duration}} </p>-->
            </div>
          </div>
          <div class="extra content">
            <div class="ui two buttons">
              <a href="/bookmark/{{id}}" class="ui icon button">
                <i class="icon folder open"></i>
              </a>
              <a href="/dashboard/deletebookmark/{{id}}" class="ui icon button">
                <i class="icon trash"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
{{/each}}
</div>
</div>